@using Hastane.Models;
@model Hastane.ViewModels.DoctorViewModel

@{
    ViewData["Title"] = "Create";
}

<br>
<br>
<h2>Doktor Ekle</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="UserId" class="form-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Gender" class="form-label"></label>
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control">
                    <option value="">Seçiniz</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DateOfBirth" class="form-label"></label>
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input class="form-check-input" asp-for="IsDoctor" />
                <label class="form-check-label">
                    @Html.DisplayNameFor(model => model.IsDoctor)
                </label>
            </div>

            <div class="mb-3">
                <label asp-for="Specialist" class="form-label"></label>
                <input asp-for="Specialist" class="form-control" />
                <span asp-validation-for="Specialist" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ClinicInfo" class="form-label"></label>
                <input asp-for="ClinicInfo" class="form-control" />
                <span asp-validation-for="ClinicInfo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary me-3">Ekle</button>
                <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("AllDoctors")'">Listeye Dön</button>
            </div>
        </form>
    </div>
</div>
